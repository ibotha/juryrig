  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'khodol'",
      "cargo": {
        "args": ["test", "--no-run", "--lib", "--package=khodol"],
        "filter": {
          "name": "khodol",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'example_app'",
      "cargo": {
        "args": ["build", "--bin=example_app", "--package=khodol"],
        "filter": {
          "name": "example_app",
          "kind": "bin"
        }
      },
      "env": {
        "RUST_LOG": "TRACE"
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'example_app'",
      "cargo": {
        "args": ["test", "--no-run", "--bin=example_app", "--package=khodol"],
        "filter": {
          "name": "example_app",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
